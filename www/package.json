  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.3",
    "@types/node": "^20.11.17",
    "@webgpu/types": "^0.1.40",
    "esbuild": "^0.20.2",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
